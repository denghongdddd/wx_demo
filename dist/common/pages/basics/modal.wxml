        <view class="action">
          <button class="cu-btn bg-green shadow" bindtap="showModal" data-wpyshowmodal-a="Modal">Modal</button>
        </view>
      </view>
      <d-modal id="Modal">
        <view slot="content">asdasdf</view>
      </d-modal>

      <view class="cu-bar bg-white margin-top">
        <view class="action">
          <text class="cuIcon-title text-orange "/> 底部窗口
