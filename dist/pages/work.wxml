
    <view class="body">
        <tap bgColor="bg-gradual-pink">
            <view slot="content">工作记录</view>
        </tap>
        <view class="cu-form-group d-arrow">
            <view class="title">日期</view>
            <text style="color:{{!value.date&&'#8799a3'}};" bindtap="selectData" data-wpyselectdata-a="date">{{value.date||"选择日期"}}</text>
        </view>
        <view class="cu-form-group">
            <view class="title">拜访日期</view>
            <view bindtap="selectData" style="flex-grow:1;" data-wpyselectdata-a="moreDate">
                <text class="cu-tag radius" style="margin-bottom:10rpx;"  wx:for="{{value.moreDate}}">{{item}}</text>
                <text style="color:#8799a3;"  wx:if="{{value.moreDate.length==0}}">请选择</text>
            </view>
        </view>
        <view class="cu-form-group">
            <view class="title">拜访记录</view>
            <input placeholder="请输入" value="{{value.baifcontent}}" bindinput="inputValue" data-wpyinputvalue-a="baifcontent"/>
        </view>
        <view class="cu-form-group">
            <view class="title">任务周期</view>
            <view bindtap="selectData" style="flex-grow:1;" data-wpyselectdata-a="roundDate">
                <text style="color:#8799a3;" wx:if="{{value.roundDate.length==0}}">请选择</text>
                <text wx:else>{{value.roundDate[0]}} -- {{value.roundDate[1]}}</text>
            </view>
        </view>
        <view class="cu-form-group">
            <view class="title">今日总结</view>
            <input placeholder="请输入" value="{{value.content}}" bindinput="inputValue" data-wpyinputvalue-a="content"/>
        </view>
        <view class="cu-form-group align-start">
            <view class="title">工作计划</view>
            <textarea wx:if="{{!disabled}}" maxlength="-1" bindinput="inputValue" value="{{value.plan}}" placeholder="请输入" data-wpyinputvalue-a="plan"/>
        </view>
        <view class="cu-form-group align-start">
            <view class="title">备注</view>
            <textarea wx:if="{{!disabled}}" maxlength="-1" bindinput="inputValue" value="{{value.sRemat}}" placeholder="请输入" data-wpyinputvalue-a="sRemat"/>
        </view>
        <button class="cu-btn block bg-blue margin-tb-sm lg" bindtap="up">提交</button>

        <dateSelect id="date" bindsubmit="dateValue" bindcancel="cancel"/>
    </view>